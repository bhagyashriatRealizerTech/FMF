<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/square_background"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <realizer.com.makemepopular.view.RoundedImageView
        android:id="@+id/iv_userPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/user_icon_white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_userName"
            android:textSize="20sp"
            android:text="Bhagyashri Salgare"
            android:textColor="@color/icons"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_genderage"
            android:textSize="12sp"
            android:text="Female, 28"
            android:textColor="@color/icons"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_email"
            android:textSize="12sp"
            android:text="bhagyashri.salgare@gmail.com"
            android:textColor="@color/icons"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btn"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/btn_accept"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Accept"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/icons"
            android:background="@drawable/buttongradientgreen"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/btn_reject"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Reject"
            android:textColor="@color/icons"
            android:background="@drawable/emergencybuttongradient"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="View Profile"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/txt_profile"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:text="@string/fa_invitefrnd_ico"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="Unfriend"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_weight="0.2"
                android:textSize="25sp"
                android:clickable="true"
                android:text="@string/fa_user_times"
                android:id="@+id/txt_unfriend" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border_line_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="Block"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/txt_block"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:textColor="@color/red"
                android:text="@string/fa_times_circle"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border_line_grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="Track"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/txt_track"
                android:text="@string/fa_mapmarker_ico"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:textColor="@color/secondary_text"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border_line_grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="Emergency"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/txt_emergency"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="25sp"
                android:clickable="true"
                android:textColor="@color/forestgreen"
                android:text="@string/fa_toggle_off_ico"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/border_line_grey"/>
    </LinearLayout>
</LinearLayout>
    <realizer.com.makemepopular.view.ProgressWheel
        android:id="@+id/loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:matProg_barColor="@color/colorAccent"
        app:matProg_progressIndeterminate="true"
        />
</RelativeLayout>
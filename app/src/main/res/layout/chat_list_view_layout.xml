<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/txtinitial"
            android:background="@drawable/profilepic_circle"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/icons"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:text="SD"/>

        <realizer.com.makemepopular.view.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="visible"
            android:src="@drawable/user_icon"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:id="@+id/img_user_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Thread Name"
                    android:id="@+id/txtthreadname"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/primary_text"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:text="1/12/2016"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/secondary_text"
                    android:layout_gravity="center"
                    android:id="@+id/txtdate"
                    />

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Hi All"
                     android:singleLine="true"
                     android:id="@+id/txtmsg"
                     android:gravity="left"
                     android:layout_gravity="left"
                     android:textColor="@color/black"
                     />-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <realizer.com.makemepopular.emoji.EmojiconTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Last Mesage"
                    android:singleLine="true"
                    android:layout_weight="0.6"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txtsendername"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="@color/darkGrey"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/txt_read_delivered"
                    android:background="@drawable/msg_sent_img"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="@color/secondary_text"/>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/unread_circle"
                    android:id="@+id/txtunreadcount"
                    android:text="1"/>
            </LinearLayout>
            </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_line"/>
</LinearLayout>
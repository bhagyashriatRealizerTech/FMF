<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:component="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="2"
        android:weightSum="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <realizer.com.makemepopular.view.RoundedImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/grp_frndImg"
            android:src="@drawable/user_icon"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/txtinitial"
            android:background="@drawable/profilepic_circle"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="@color/icons"
            android:textSize="20dp"
            android:visibility="gone"
            android:text="SD"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Friend Name"
            android:layout_weight="3.2"
            android:id="@+id/txt_grpfrndlst_frndname"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:textSize="14sp"

            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="@color/primary_text"
            />
        <TextView
            android:id="@+id/removeIcon"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="X"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:visibility="gone"
            android:layout_height="50dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        />
</LinearLayout>
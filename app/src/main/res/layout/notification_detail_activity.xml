<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/icons"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <realizer.com.makemepopular.view.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:id="@+id/user_img"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Name: "
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/secondary_text"
                android:id="@+id/txt_notidtls_byname"
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:text="Notificatio By Name"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/border_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="07dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Date: "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content" />

            <TextView

                android:id="@+id/txt_notidtls_notidate"
                android:textColor="@color/secondary_text"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="25/01/2017"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_line"
            android:layout_height="07dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Type: "
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/txt_notidtls_notitype"
                android:textColor="@color/secondary_text"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Notification Type"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_line"
            android:layout_height="07dp" />
        <TextView
            android:layout_gravity="left"
            android:id="@+id/txt_notidtls_notitxt"
            android:textColor="@color/icons"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:background="@drawable/square_line_solid"
            android:text="Notification Text"
            />
        <LinearLayout
            android:id="@+id/friendrequestLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_gravity="left"
                android:id="@+id/btn_accept"
                android:textColor="#444"
                android:background="@drawable/button_bg"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:text="Accept"
                />

            <Button
                android:layout_gravity="left"
                android:id="@+id/btn_reject"
                android:textColor="#444"
                android:textStyle="normal"
                android:background="@drawable/button_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:text="Reject"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emergencyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_ackmap"
                    android:background="@drawable/buttongradientgreen"
                    android:textSize="16sp"
                    android:text="Acknowledge and show map"
                    android:textAllCaps="false"
                    android:textColor="@color/icons"
                   />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/btn_emergency_reject"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/emergencybuttongradient"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:text="Reject"
                    android:textColor="@color/icons"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btn_emergency_share"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttongradient"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="Share"
                android:textColor="@color/icons"/>
            </LinearLayout>

            </LinearLayout>

    <realizer.com.makemepopular.view.ProgressWheel
        android:id="@+id/loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:matProg_barColor="@color/colorAccent"
        app:matProg_progressIndeterminate="true"
        />
</RelativeLayout>
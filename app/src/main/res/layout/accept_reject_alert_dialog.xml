<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/square_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="Friend Request By"
        android:paddingLeft="20dp"
        android:gravity="left|center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:paddingTop="5dp"
        android:gravity="left|center"
        android:paddingBottom="5dp"
        android:weightSum="2"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <realizer.com.makemepopular.view.RoundedImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/add_friend_img"
            android:src="@drawable/user_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend Name"
                android:id="@+id/txt_addfrnd_frndname"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/primary_text"
                android:layout_weight="2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend Address"
                android:id="@+id/txt_addfrnd_gender"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/secondary_text"
                android:layout_weight="2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend Address"
                android:id="@+id/txt_addfrnd_frndaddress"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/secondary_text"
                android:layout_weight="2"
                />
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reject"
            android:background="@drawable/emergencybuttongradient"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:text="Ignore"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_accpet"
            android:textSize="18sp"
            android:text="Accept"
            android:textColor="#fff"
            android:background="@drawable/button_bg_green"/>
    </LinearLayout>


</LinearLayout>